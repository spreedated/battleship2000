<UserControl x:Class="Battleship2000.ViewElements.SelectionArrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleship2000.ViewElements"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="32">
        <Border Width="32" Height="32" Margin="0">
            <Rectangle Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="#bbb" Effect="{StaticResource ButtonMenuDropShadow}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{StaticResource ArrowLeft}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Border>
</UserControl>
