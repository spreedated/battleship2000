<UserControl x:Class="Battleship2000.ViewElements.SelectionArrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleship2000.ViewElements"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="16" Height="16" Width="16" Name="me">
        <Border Width="{Binding ElementName=me, Path=Width}" Height="{Binding ElementName=me, Path=Height}" Margin="0">
            <Rectangle Fill="#bbb" Effect="{StaticResource ButtonMenuDropShadow}">
                <Rectangle.OpacityMask>
                    <VisualBrush x:Name="vBrush" Stretch="Fill" Visual="{StaticResource ArrowLeft}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Border>
</UserControl>
