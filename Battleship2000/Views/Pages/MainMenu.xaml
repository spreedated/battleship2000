<Page x:Class="Battleship2000.Views.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Battleship2000.Views.Pages"
      xmlns:vm="clr-namespace:Battleship2000.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">
    <Page.DataContext>
        <vm:MainMenuViewModel />
    </Page.DataContext>
    <StackPanel>
        <StackPanel Margin="0,50,0,50">
            <TextBlock Text="{Binding ProjectName}" VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource TextHeadline}" />
            <TextBlock Text="{Binding ProjectVersion}" VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource TextHeadline}" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button Style="{StaticResource ResourceKey=ButtonMenu}" Content="Play" Command="{Binding PlayCommand}" />
            <Button Style="{StaticResource ResourceKey=ButtonMenu}" Content="Start Dedicated Server" Command="{Binding DedicatedServerCommand}" />
            <Button Style="{StaticResource ResourceKey=ButtonMenu}" Content="Exit" Command="{Binding ExitCommand}" />
        </StackPanel>
    </StackPanel>
</Page>
